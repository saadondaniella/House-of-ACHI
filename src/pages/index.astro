---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import CaseCard from "../components/CaseCard.astro";
import ContactForm from "../components/ContactForm.astro";
import { cases } from "../data/cases.js";
---

<BaseLayout title="House of Achi">
  <Header />
  <Nav />

  <section id="who" class="section section-who">
    <div class="section-inner">
      <header class="who-header">
        <h2 class="who-title">Who is Achi</h2>

        <div class="who-text">
          <p class="who-lead">
            A creative studio built on the belief that brands are remembered for
            how they feel – and the stories worth retelling.
          </p>

          <p>
            Our mission is to create the kind of experiences people talk about
            later. We work with fashion, beauty and lifestyle brands that want
            to tell their story in a new way.
          </p>

          <p>
            <strong
              >Our focus is on shaping sharp, contemporary brand expression.</strong
            >
            We create content that strengthens the brand over time and leaves a lasting
            impression across the brand’s digital channels.
          </p>

          <p>
            We collaborate closely with our clients and take on a limited number
            of projects to ensure focus, quality and attention to detail. We
            believe in doing fewer things better.
          </p>
        </div>
      </header>

      <div class="who-media">
        <img
          src="/images/site/who-1.png"
          alt="Achi team portrait"
          class="who-image who-image--main"
          loading="lazy"
        />

        <img
          src="/images/site/who-2.png"
          alt="Behind the scenes"
          class="who-image who-image--secondary"
          loading="lazy"
        />
      </div>
    </div>
  </section>

  <section id="way" class="section section-way">
    <div class="section-inner">
      <div class="way-content">
        <h2 class="way-title">The ACHI way</h2>

        <ul class="way-list">
          <li>
            A sharp idea for a brand experience based on the brand’s identity
            and vision.
          </li>
          <li>
            An experience designed to generate photo and video content — and
            memorable moments for the guests.
          </li>
          <li>
            A custom invitation and a short intro film to build curiosity.
          </li>
          <li>
            A carefully selected group of people relevant to the brand who share
            the story with their followers.
          </li>
          <li>
            Short films and still images created during the live experience.
          </li>
          <li>All content planned, produced and curated by us.</li>
        </ul>

        <div class="way-value">
          <h3>THE VALUE:</h3>
          <p>
            Content that can be used across the brand’s digital channels before,
            during and after the experience.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section id="cases" class="cases">
    {
      cases.map((c, index) => (
        <CaseCard
          href={`/cases/${c.slug}`}
          title={c.title}
          images={c.preview.map((src, i) => ({
            src,
            class:
              i === 0
                ? "case-img case-img--tall"
                : i === 1
                  ? "case-img case-img--top"
                  : "case-img case-img--wide",
          }))}
          reverse={index % 2 !== 0}
        />
      ))
    }
  </section>

  <ContactForm to="saadondaniella@gmail.com" />
  <Footer />
</BaseLayout>
