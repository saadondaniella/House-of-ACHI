---
const year = new Date().getFullYear();
---

<footer class="site-footer">
  <a href="/" class="footer-logo" aria-label="House of Achi">
    <img src="/images/site/logo.png" alt="House of Achi logo" />
  </a>
  <p>© {year} House of Achi</p>
  <div class="footer-content">
    <nav class="footer-nav">
      <a href="/#who">Who is Achi</a>
      <a href="/#cases">Cases</a>
      <a href="/contact">Contact</a>
    </nav>
  </div>
  <div class="footer-meta">
    <!-- <p class="footer-copy">© {year} House of Achi</p> -->
  </div>
</footer>

<style>
  .site-footer {
    border-top: 1px solid rgba(0, 0, 0, 0.06);
    padding: 40px 20px;
    background: transparent;
  }
  .footer-inner {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    gap: 28px;
  }
  .footer-logo img {
    height: 70px;
    display: block;
  }
  .footer-content {
    display: flex;
    flex: 1;
    justify-content: space-between;
    align-items: center;
  }
  .footer-nav a {
    margin-right: 18px;
    text-decoration: none;
    color: inherit;
    opacity: 0.9;
    font-size: 0.95rem;
  }
  .footer-nav a:hover {
    opacity: 1;
  }
  .footer-copy {
    margin: 0;
    opacity: 0.8;
    font-size: 0.95rem;
  }
  @media (max-width: 720px) {
    .footer-inner {
      flex-direction: column;
      gap: 14px;
    }
    .footer-content {
      width: 100%;
      justify-content: space-between;
    }
  }
</style>
