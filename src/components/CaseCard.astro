---
const { href = "#", title = "", images = [], reverse = false } = Astro.props;
---

<a href={href} class="case-panel" aria-label={`Open case ${title}`}>
  <div class={`case-grid ${reverse ? "case-grid--reverse" : ""}`}>
    {
      images.map((img) => (
        <div class="case-slide">
          <img
            src={img.src}
            alt={img.alt ?? ""}
            class={img.class ?? "case-img"}
            loading="lazy"
          />
        </div>
      ))
    }
  </div>

  <div class="case-meta">
    <h2 class="case-title">{title}</h2>
    <span class="case-see-more">See more â†’</span>
  </div>

</a>
